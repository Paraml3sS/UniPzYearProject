<UserControl x:Class="WpfApp.Views.RegistartionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="0">
            <TextBlock Margin="20,7,0,5">First name</TextBlock>
            <TextBox Text="{Binding User.FirstName}" Margin="0"></TextBox>
            <TextBlock Margin="20,7,0,5">Last name</TextBlock>
            <TextBox Text="{Binding User.LastName}"></TextBox>
            <TextBlock Margin="20,7,0,5">User name</TextBlock>
            <TextBox Text="{Binding User.UserName}"></TextBox>
            <TextBlock Margin="20,7,0,5">Password</TextBlock>
            <TextBox Text="{Binding User.Password}"></TextBox>
            <TextBlock Margin="20,7,0,5">Email address</TextBlock>
            <TextBox Text="{Binding User.EmailAddress}"></TextBox>
            <Button Margin="0,15,0,5" FontSize="14" FontFamily="SimSun" Command="{Binding RegisterCommand}">Register</Button>
        </StackPanel>
    </Grid>
</UserControl>
